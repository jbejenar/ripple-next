{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "types": ["node"],
    "paths": {
      "@ripple-next/ui": ["./packages/ui/index.ts"],
      "@ripple-next/db": ["./packages/db/index.ts"],
      "@ripple-next/queue": ["./packages/queue/index.ts"],
      "@ripple-next/auth": ["./packages/auth/index.ts"],
      "@ripple-next/storage": ["./packages/storage/index.ts"],
      "@ripple-next/email": ["./packages/email/index.ts"],
      "@ripple-next/events": ["./packages/events/index.ts"],
      "@ripple-next/validation": ["./packages/validation/index.ts"],
      "@ripple-next/shared": ["./packages/shared/index.ts"],
      "@ripple-next/testing": ["./packages/testing/setup.ts"],
      "@ripple-next/cms": ["./packages/cms/index.ts"]
    }
  },
  "exclude": ["node_modules", "**/dist/**", "**/.output/**", "**/.nuxt/**"]
}
