{
  "name": "ripple-next",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@9.15.4",
  "engines": {
    "node": ">=22.14.0",
    "pnpm": ">=9.15.4"
  },
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "test": "turbo test",
    "test:ci": "vitest run --reporter=default --reporter=junit --outputFile=test-results/junit.xml",
    "test:e2e": "turbo test:e2e",
    "test:ui": "turbo test:ui",
    "lint": "turbo lint",
    "lint:fix": "turbo lint:fix",
    "typecheck": "turbo typecheck",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "clean": "turbo clean && rimraf node_modules",
    "db:generate": "pnpm --filter @ripple/db db:generate",
    "db:migrate": "pnpm --filter @ripple/db db:migrate",
    "db:seed": "pnpm --filter @ripple/db db:seed",
    "db:studio": "pnpm --filter @ripple/db db:studio",
    "storybook": "storybook dev -p 6006",
    "storybook:build": "storybook build",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "turbo build && changeset publish",
    "doctor": "bash scripts/doctor.sh",
    "bootstrap": "pnpm install --frozen-lockfile && pnpm doctor && echo '\\nBootstrap complete. Run pnpm dev to start.'",
    "check:iac": "node scripts/iac-policy-scan.mjs",
    "check:readiness": "node scripts/check-readiness.mjs",
    "check:quarantine": "node scripts/check-quarantine.mjs",
    "validate:env": "node scripts/validate-env.mjs",
    "verify": "node scripts/verify.mjs",
    "generate:component": "node scripts/generate/index.mjs component",
    "generate:provider": "node scripts/generate/index.mjs provider",
    "generate:endpoint": "node scripts/generate/index.mjs endpoint",
    "generate:package": "node scripts/generate/index.mjs package",
    "runbook": "node scripts/runbook.mjs",
    "deploy:health-check": "node scripts/deploy-health-check.mjs",
    "prepare": "husky"
  },
  "pnpm": {
    "overrides": {
      "minimatch@>=9.0.0 <9.0.7": ">=9.0.7",
      "fast-xml-parser@<5.3.8": ">=5.3.8",
      "cookie@<1.0.2": ">=1.0.2",
      "path-to-regexp@>=2.0.0 <8.0.0": ">=8.0.0",
      "cross-spawn@<7.0.5": ">=7.0.5",
      "esbuild@<0.25.0": ">=0.25.0"
    }
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.2",
    "@changesets/cli": "^2.29.8",
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.0",
    "@eslint/js": "^9.18.0",
    "@storybook/vue3": "^10.2.13",
    "@storybook/vue3-vite": "^10.2.13",
    "@types/node": "^22.12.0",
    "@vitejs/plugin-vue": "^6.0.4",
    "eslint": "^9.18.0",
    "eslint-plugin-vue": "^9.32.0",
    "globals": "^15.14.0",
    "husky": "^9.1.7",
    "prettier": "^3.4.2",
    "rimraf": "^6.0.1",
    "storybook": "^10.2.13",
    "turbo": "^2.3.3",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0",
    "vue": "^3.5.13",
    "vue-eslint-parser": "^9.4.3"
  }
}
