{
  "name": "ripple-next",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@9.15.4",
  "engines": {
    "node": ">=22.0.0",
    "pnpm": ">=9.0.0"
  },
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "test": "turbo test",
    "test:e2e": "turbo test:e2e",
    "test:ui": "turbo test:ui",
    "lint": "turbo lint",
    "lint:fix": "turbo lint:fix",
    "typecheck": "turbo typecheck",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "clean": "turbo clean && rimraf node_modules",
    "db:generate": "pnpm --filter @ripple/db db:generate",
    "db:migrate": "pnpm --filter @ripple/db db:migrate",
    "db:seed": "pnpm --filter @ripple/db db:seed",
    "db:studio": "pnpm --filter @ripple/db db:studio",
    "storybook": "pnpm --filter @ripple/ui storybook",
    "prepare": "husky"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.0",
    "husky": "^9.1.7",
    "prettier": "^3.4.2",
    "rimraf": "^6.0.1",
    "turbo": "^2.3.3",
    "typescript": "^5.7.3"
  }
}
