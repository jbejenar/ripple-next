{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Ripple Next Template Configuration",
  "description": "Configuration for GitHub template repository distribution and scaffold generator. Defines which files from the golden-path source are included in templates, AI agent configs, and post-clone setup instructions. See RN-024 and RN-041.",
  "version": "1.2.0",
  "templateIncludes": {
    "description": "Files included when a new repo is created from this template",
    "governed": [
      ".github/actions/setup/action.yml",
      ".github/actions/quality/action.yml",
      ".github/actions/test/action.yml",
      ".github/actions/fleet-drift/action.yml",
      ".github/workflows/ci.yml",
      ".github/workflows/security.yml",
      ".github/CODEOWNERS",
      ".nvmrc",
      "eslint.config.js",
      "scripts/check-readiness.mjs",
      "scripts/check-quarantine.mjs",
      "scripts/check-fleet-drift.mjs",
      "scripts/verify.mjs",
      "scripts/iac-policy-scan.mjs",
      "docs/fleet-policy.json",
      "docs/iac-policies.json",
      "docs/error-taxonomy.json",
      ".github/actions/fleet-feedback/action.yml",
      ".github/workflows/fleet-feedback-intake.yml",
      "scripts/fleet-feedback.mjs",
      "scripts/fleet-feedback-intake.mjs",
      "docs/fleet-feedback-schema.json",
      "docs/fleet-changelog.json"
    ],
    "scaffold": [
      "package.json",
      "tsconfig.json",
      ".env.example",
      "vitest.workspace.ts",
      ".gitignore",
      ".prettierrc",
      "turbo.json",
      ".fleet.json"
    ],
    "ai": [
      "CLAUDE.md",
      "AGENTS.md",
      ".github/copilot-instructions.md",
      ".github/agents/api-designer.agent.md",
      ".github/agents/docs-writer.agent.md",
      ".github/agents/security-reviewer.agent.md",
      ".github/agents/test-engineer.agent.md",
      ".github/instructions/api.instructions.md",
      ".github/instructions/database.instructions.md",
      ".github/instructions/frontend.instructions.md",
      ".github/instructions/infrastructure.instructions.md",
      ".github/instructions/testing.instructions.md",
      ".github/prompts/add-feature.prompt.md",
      ".github/prompts/add-tests.prompt.md",
      ".github/prompts/fix-bug.prompt.md"
    ]
  },
  "templateExcludes": {
    "description": "Files excluded from the template (domain-specific)",
    "paths": [
      "apps/web/",
      "services/",
      "packages/*/providers/*.ts",
      "packages/db/repositories/",
      "packages/db/schema/",
      "packages/cms/providers/drupal.ts",
      "packages/cms/providers/tide-paragraph-mapper.ts",
      "sst.config.ts",
      "docs/product-roadmap/",
      "docs/readiness.json",
      ".changeset/"
    ]
  },
  "postCloneInstructions": [
    "Run: pnpm generate:scaffold <target-dir> --name=<name> --org=<org> (or use GitHub template)",
    "Run: pnpm bootstrap",
    "Copy .env.example to .env and fill in required values",
    "Update package.json name and description",
    "Update .github/CODEOWNERS with your team",
    "Review and customize CLAUDE.md and AGENTS.md for your project",
    "Run: pnpm doctor to validate environment",
    "Run: pnpm verify to confirm all quality gates pass"
  ]
}
